#!/bin/bash

set -e

until mysql -h test_db -u root -p1234 -e exit; do
  >&2 echo "MySQL is unavailable - sleeping"
  sleep 1
done

>&2 echo "MySQL is up - starting guard"
rake db:drop

# rake parallel:setup
rake db:create
rake db:schema:load

sysctl -w fs.inotify.max_user_watches=524288
bundle exec guard -p -w app spec
