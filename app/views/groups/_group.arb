columns do
  column span: 1 do
    panel "Basic info" do
      attributes_table_for group do
        row :sequences_count
      end
    end

  end

  column span: 3 do
    panel "Tree", "data-panel" => :open do
      if group.tree
        render(partial: "groups/tnt_tree",
                locals:  {tree:    group.fast_result.tree.newick,
                          width:   600,
                          compact: false})
      end
    end
  end

  column span: 1 do
    panel "Actions" do
      render(partial: "groups/actions", locals: {group: group})
    end
  end
end

panel "Alignments", id: "alignments" do
  render group.original_alignment if group.original_alignment
  render group.processed_alignment if group.processed_alignment
end
